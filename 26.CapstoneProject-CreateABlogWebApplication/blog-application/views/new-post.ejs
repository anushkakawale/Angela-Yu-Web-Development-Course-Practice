<%- include("partials/header.ejs") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
          <h2 class="text-center mb-4 fw-bold text-primary">
            ‚úçÔ∏è Create a New Blog Post
          </h2>
          <form action="/new" method="POST">
            
            <div class="mb-4">
              <label for="title" class="form-label fw-semibold">Post Title</label>
              <input
                type="text"
                name="title"
                id="title"
                class="form-control form-control-lg border-primary-subtle"
                placeholder="Enter your post title"
                required
              />
            </div>

            <!-- Content -->
            <div class="mb-4">
              <label for="content" class="form-label fw-semibold">Post Content</label>
              <textarea
                name="content"
                id="content"
                rows="8"
                class="form-control form-control-lg border-primary-subtle"
                placeholder="Write your content here..."
                required
              ></textarea>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between align-items-center mt-4">
              <a href="/" class="btn btn-outline-secondary px-4">
                ‚Üê Back to Home
              </a>
              <button type="submit" class="btn btn-primary px-5">
                üöÄ Publish Post
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #f8f9fa, #eef3f9);
    font-family: "Poppins", sans-serif;
  }
  .card {
    background: #ffffff;
  }
  .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 8px rgba(13, 110, 253, 0.2);
  }
  textarea {
    resize: none;
  }
</style>
