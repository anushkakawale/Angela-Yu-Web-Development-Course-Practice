<%- include("partials/header.ejs") %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-primary mb-0">üìù My Blogs</h3>
    <a class="btn btn-primary shadow-sm px-4" href="/new">+ Create New Post</a>
  </div>

  <% if (posts.length === 0) { %>
    <div class="text-center py-5">
      <p class="text-muted fs-5">No posts yet! Create one above.</p>
    </div>
  <% } else { %>
    <div class="row g-4">
      <% posts.forEach(post => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm rounded-4 post-card">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary fw-bold mb-3"><%= post.title %></h5>
              <p class="card-text text-secondary flex-grow-1"><%= post.content.substring(0, 120) %>...</p>

              <div class="d-flex justify-content-between align-items-center mt-3">
                <a href="/edit/<%= post.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<style>
  body {
    background: linear-gradient(135deg, #f8f9fa, #eef3f9);
    font-family: "Poppins", sans-serif;
  }
  .post-card {
    transition: all 0.25s ease-in-out;
  }
  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  }
  .card-text {
    line-height: 1.6;
  }
  .btn-outline-primary:hover, .btn-outline-danger:hover {
    color: #fff !important;
  }
</style>

<%- include("partials/footer.ejs") %>
